@page "/fetchdata"
@using MoveM8s.Data
@inject WeatherForecastService ForecastService

<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (forecast == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <tr>
                    <th> Name   </th>
                </tr>
                @*<th>Value</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach(var timeSerie in forecast.TimeSeries)
            {
                <tr>
                   <td>@timeSerie.ValidTime.ToShortDateString()</td>
                @foreach (var parameter in timeSerie.Parameters)
                {
                    <tr>

                   <td>@parameter.Name</td>
                   @*<td>@parameter.Values.FirstOrDefault() </td> *@

                   </tr>                  
                }
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private WeatherForecast? forecast;

    protected override async Task OnInitializedAsync()
    {
        forecast = await ForecastService.GetForecastAsync(DateOnly.FromDateTime(DateTime.Now));
    }
}
